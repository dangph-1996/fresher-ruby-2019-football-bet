<%= form_for [:admin, @season] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group col-sm-6">
    <%= f.select :league_id, get_league, {include_blank: t("league")}, {class: "form-control"} %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :start_time %><br>
    <%= f.date_select :start_time, class: "datepicker"  %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :finish_time %><br>
    <%= f.date_select :finish_time %>
  </div>

  <% FootballClub.all.each do |football_club| %>
    <%= f.check_box :football_clubs, {multiple: true}, football_club.id, false %>
    <%= f.label football_club.name %><br>
    <% end %>

  <%= button_tag t("submit"), type: "submit", class: "btn btn-primary" %>
  <%= button_tag t("reset"), type: "reset", class: "btn btn-default" %>
<% end %>
