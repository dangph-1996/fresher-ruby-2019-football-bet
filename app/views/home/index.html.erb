<div class="hero-area">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="section-heading">
          <h6><%= t "new_News"%></h6>
        </div>
        <div class="row">
          <% @newspaper_hots.each do |newspaper_hot| %>
            <div class="col-12 col-md-6">
              <div class="single-blog-post style-3">
                <div class="post-thumb">
                  <%= link_to newspaper_path(newspaper_hot) do %>
                     <%= image_tag "#{newspaper_hot.image}" , alt: "avatar" %>
                  <% end %>
                  </a>
                </div>
                <div class="post-data">
                  <%= link_to newspaper_path(newspaper_hot) do %>
                     <h4><%= newspaper_hot.title %></h4>
                  <% end %>
                  <p><%= raw( newspaper_hot.description.slice(Settings.start_char..Settings.end_char)) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <div class="section-heading">
          <h6><%= t "related_news"%></h6>
        </div>
        <% @newspaper_normals.each do |newspaper_normal| %>
          <div class="single-blog-post small-featured-post d-flex">
            <div class="post-thumb news_normal">
              <%= link_to newspaper_path(newspaper_normal) do %>
                <%= image_tag "#{newspaper_normal.image}" , alt: "avatar" %>
              <% end %>
            </div>
            <div class="post-data">
              <a href="#" class="post-catagory"><%= newspaper_normal.category_name %></a>
              <div class="post-meta">
                <a href="#" class="post-title">
                  <h6><%= newspaper_normal.title %></h6>
                </a>
                <p class="post-date"><%= newspaper_normal.created_at %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="editors-pick-post-area section-padding-80-50">
  <div class="container">
    <div class="row">
      <% @categories_show.each do |category_show| %>
        <div class="col-12 col-md-12 col-lg-12">
          <div class="section-heading">
            <h6><%= category_show.name %></h6>
          </div>
          <div class="row">
            <% get_newspaper_home_page(category_show).each do |newspaper_show| %>
            <div class="col-12 col-lg-3">
              <div class="single-blog-post news-category">
                <div class="post-thumb-category">
                  <%= link_to newspaper_path(newspaper_show) do %>
                    <%= image_tag "#{newspaper_show.image}" , alt: "avatar" %>
                  <% end %>
                </div>
                <div class="post-data">
                    <%= link_to newspaper_path(newspaper_show) do %>
                      <h6><%= newspaper_show.title %></h6>
                    <% end %>
                    <div class="post-meta">
                      <div class="post-date"><%= link_to newspaper_show.created_at.strftime(t("format_time")) , newspaper_path(newspaper_show) %></div>
                    </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
